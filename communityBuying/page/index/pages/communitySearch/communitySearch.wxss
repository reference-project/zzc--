.line-bottom{
  opacity: 0.75;
  background: #F8F8F8;
  height: 20rpx;
}
.empty-result{
  text-align: center;
  font-size: 26rpx;
  color: #999;
  padding: 30rpx;
}
.hot-community-lists{
  padding: 30rpx 30rpx;
}
.hot-community-lists.result{
  padding: 0 30rpx;
}
.hot-community-text{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999999;
  line-height: 28rpx;
}
.hot-community-item-name{
  margin-top: 30rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #333333;
  line-height: 32rpx;
}
.hot-community-item-address{
  margin-top: 14rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #666666;
  line-height: 28rpx;
}

.hot-community-empty{
  padding-top: 300rpx;
  text-align: center;
  font-size: 0rpx;
}
.hot-community-empty image{
  width: 266rpx;
  height: 194rpx;
}
.hot-community-empty-text{
  font-size: 24rpx;
  line-height: 24rpx;
  margin-top: 26rpx;
  color: #ccc;
}

.community-item{
  height: 304rpx;
  padding: 62rpx 0rpx;
  display: flex;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f7f7f7;
}
.community-item:last-child{
  border: 0;
}
.community-item-left image{
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
}
.community-item-right{
  margin-left: 16rpx;
  flex: 1;
}
.community-item-right-top,.community-item-right-middle{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.community-item-name{
  font-size: 32rpx;
  line-height: 46rpx;
  color: #282828;
  font-family: PingFangSC-Semibold;
}
.community-item-distance{
  font-size: 26rpx;
  line-height: 38rpx;
  color: #FB5E51;
  font-family: PingFangSC-Medium;
}
.community-item-right-middle{
  margin-top: 16rpx;
}
.community-item-address{
  font-size: 26rpx;
  line-height: 38rpx;
  color: #666;
  flex: 1;
}
.community-item-right-middle image{
  width: 18rpx;
  height: 18rpx;
}
.community-item-right-bottom{
  margin-top: 4rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  line-height: 38rpx;
  color: #AEAEAE;
}
.community-item-right-bottom text{
  margin-left: 20rpx;
}