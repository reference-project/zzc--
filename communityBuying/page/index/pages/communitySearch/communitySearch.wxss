.city-choose{
  display: flex;
  align-items: center;
  padding: 0 23rpx;
  height: 66rpx;
}
.icon-address{
  width: 34rpx;
  height: 34rpx;
  margin-right: 14rpx;
}
.icon-arrow-bottom{
  margin-left: 18rpx;
  width: 16rpx;
  height: 8rpx;
}
.city-choose-name{
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #282828;
}
.input-content{
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 23rpx;
  height: 66rpx;
}
.icon-search{
  width: 36rpx;
  height: 36rpx;
  margin-right: 4rpx;
}
.input-text{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #999999;
}
