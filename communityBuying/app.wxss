/**app.wxss**/
@import "/style/font/iconfont.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
button{
  border-radius: 0px;
  padding: 0px;
  background-color: #fff;
}
.button-hover{
  background-color: #fff;
}
.user-info-content.button-hover{
    background:rgba(247,247,247,1);
}
button::after{
  border: 0rpx;
}
image{
  width: 100%;
}
.two-ellipsis{
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp:2;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.isIphoneX-container-page{
  padding-bottom: 200rpx;
}
.isIphoneX-nav-footer{
  padding-bottom: 72rpx;
}
.icon-arrow-right-default{
  width: 28rpx;
  height: 28rpx;
}
.half-border-bottom{
  position: relative;
}
.half-border-bottom::after{
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  height: 1rpx;
  background-color: #eaeaea;
  transform: scaleY(0.5);
}
.half-border-top{
  position: relative;
}
.half-border-top::after{
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  z-index: 2;
  height: 1rpx;
  background-color: #eaeaea;
  transform: scaleY(0.5);
}

.opacity-animation{
    -webkit-animation: opacity 0.3s linear;
    animation: opacity 0.3s linear;
}
@-webkit-keyframes opacity {
    0% {
        opacity: 0;
    }
    100% {
        opacity:1;
    }
}
@keyframes opacity {
    0% {
        opacity:0;
    }
    100% {
        opacity:1;
    }
}